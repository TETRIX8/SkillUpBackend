{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "email-service/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/email/(.*)",
      "dest": "email-service/api/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "backend/api/index.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
}

